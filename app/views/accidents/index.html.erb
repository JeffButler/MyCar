<p id="notice"><%= notice %></p>

<h1>Accidents</h1>

<table>
  <thead>
    <tr>
      <th>Time</th>
      <th>Type</th>
      <th>Car</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accidents.each do |accident| %>
      <tr>
        <td><%= accident.time %></td>
        <td><%= accident.accident_type %></td>
        <td><%= get_car_info(accident.car_id) %></td>
        <td><%= link_to 'Show', accident %></td>
        <td><%= link_to 'Edit', edit_accident_path(accident) %></td>
        <td><%= link_to 'Destroy', accident, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


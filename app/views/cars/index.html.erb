<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<table>
  <thead>
    <tr>
      <th>Picture</th>
      <th>Color</th>
      <th>Year</th>
      <th>Model</th>
      <th>Car type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td class="photo-image"><%= render get_photos(car.photo_id) %></td>
        <td><%= car.color %></td>
        <td><%= car.year %></td>
        <td><%= car.model %></td>
        <td><%= car.car_type %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

